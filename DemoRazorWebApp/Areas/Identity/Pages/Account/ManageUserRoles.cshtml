@page "{userId}"
@model DemoRazorWebApp.Areas.Identity.Pages.Account.ManageUserRolesModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="userroles" method="post">
                <hr />
                <div class="card">
                    <div class="card-header">
                        Add/Remove Roles for User @Model.UserId.
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.UserRolesManager.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.UserRolesManager[i].RoleId" />
                                <input type="hidden" asp-for="@Model.UserRolesManager[i].RoleName" />
                                <input asp-for="@Model.UserRolesManager[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.UserRolesManager[i].Selected">
                                    @Model.UserRolesManager[i].RoleName
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="card-footer">
                        <button id="update-userrole-submit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                        @*<a asp-action="EditUser" asp-route-id="@ViewBag.userId"
                           class="btn btn-primary" style="width:auto">Cancel</a>*@
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
